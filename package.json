{
  "name": "teslaterm",
  "version": "0.1.0",
  "scripts": {
    "tsc": "tsc --build --incremental",
    "build-dev": "npm run tsc && webpack --mode=development",
    "build": "npm run tsc && webpack --mode=production",
    "start-electron": "npm run tsc && cross-var electron .",
    "start-node": "npm run build-dev && node js/main/main_node.js",
    "package-electron": "cross-var electron-builder --linux zip --windows zip",
    "pkg-node": "cross-var pkg --out-path=dist/node -t  node16-linux-x64,node16-windows-x64 package.json --no-native-build",
    "pkg-rename": "cross-var mv dist/node/teslaterm-linux dist/node/ud3-node && cross-var mv dist/node/teslaterm-win.exe dist/node/ud3-node.exe",
    "package-node": "npm run pkg-node && npm run pkg-rename"
  },
  "main": "js/main/main_electron.js",
  "bin": "js/main/main_node.js",
  "dependencies": {
    "bootstrap": "^5.2.0",
    "ini": "^3.0.0",
    "jspack": "0.0.4",
    "jszip": "^3.10.0",
    "justgage": "^1.5.1",
    "midi-player-js": "^2.0.16",
    "react": "^18.2.0",
    "react-bootstrap": "^2.4.0",
    "react-dom": "^18.2.0",
    "rtpmidi": "^1.0.0",
    "serialport": "10.4.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "xterm": "^4.19.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/ini": "^1.3.31",
    "@types/node": "^16.0.0",
    "@types/serialport": "^8.0.2",
    "@types/w2ui": "^1.4.33",
    "@types/webmidi": "^2.0.6",
    "cross-var": "^1.1.0",
    "css-loader": "^6.7.1",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "node": "^16.4.0",
    "node-abi": "^3.22.0",
    "npm": "^8.13.1",
    "pkg": "^5.7.0",
    "ts-loader": "^9.3.1",
    "tslint": "^5.20.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "build": {
    "appId": "teslaterm",
    "win": {
      "artifactName": "electron/${productName}-win.${ext}"
    },
    "linux": {
      "artifactName": "electron/${productName}-linux.${ext}"
    }
  },
  "pkg": {
    "assets": [
      "index_node.html",
      "dist/bundle.js",
      "libs/*",
      "styles/*",
      "node_modules/raphael/raphael.js",
      "node_modules/xterm/css/xterm.css",
      "node_modules/@serialport/bindings-cpp/prebuilds/linux-x64/node.napi.glibc.node",
      "node_modules/@serialport/bindings-cpp/prebuilds/win32-x64/node.napi.node",
      "node_modules/bootstrap/dist/css/bootstrap.min.css",
      "node_modules/jszip/dist/jszip.min.js"
    ]
  }
}
