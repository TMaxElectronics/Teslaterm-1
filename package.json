{
  "name": "teslaterm",
  "version": "0.1.0",
  "scripts": {
    "tsc": "tsc --build --incremental",
    "build-dev": "npm run tsc && webpack --mode=development",
    "build": "npm run tsc && webpack --mode=production",
    "start-electron": "npm run tsc && electron .",

    "package-electron-win": "npm run tsc && electron-builder --windows zip",
    "package-electron-linux": "npm run tsc && electron-builder --linux zip"
  },
  "main": "js/main/main_electron.js",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "ini": "^4.1.2",
    "jspack": "0.0.4",
    "jszip": "^3.10.1",
    "justgage": "^1.6.1",
    "midi-player-js": "^2.0.16",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "^18.2.0",
    "rtpmidi": "^1.0.0",
    "serialport": "12.0.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.0",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@types/serialport": "^8.0.5",
    "@types/w2ui": "^1.4.37",
    "@types/webmidi": "^2.0.10",
    "css-loader": "^7.0.0",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "npm": "^10.5.1",
    "ts-loader": "^9.5.1",
    "tslint": "^5.20.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^5.4.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "teslaterm",
    "win": {
      "artifactName": "electron/${productName}-win.${ext}"
    },
    "linux": {
      "artifactName": "electron/${productName}-linux.${ext}"
    },
    "asarUnpack": [
      "js/main/connection/flightrecorder/FlightRecordingWorker.js"
    ]
  }
}
